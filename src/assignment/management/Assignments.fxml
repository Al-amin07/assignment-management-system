<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefWidth="800.0" prefHeight="600.0"
            xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="assignment.management.StudentAssignmentPageController"
            style="-fx-background-color: #f4f4f4;">

    <!-- Table displaying assignments -->
    <TableView fx:id="assignmentTable" layoutX="30.0" layoutY="30.0"
               prefWidth="740.0" prefHeight="300.0"
               style="-fx-background-radius: 10; -fx-border-color: lightgray; -fx-border-radius: 10;">
        <columns>
            <TableColumn fx:id="titleCol" text="Title" prefWidth="180.0"/>
            <TableColumn fx:id="subjectCol" text="Subject" prefWidth="160.0"/>
            <TableColumn fx:id="dueDateCol" text="Due Date" prefWidth="140.0"/>
            <TableColumn fx:id="descriptionCol" text="Description" prefWidth="260.0"/>
        </columns>
    </TableView>

    <!-- Submission input -->
    <Label layoutX="30.0" layoutY="350.0" text="Your Submission:"
           style="-fx-font-weight: bold; -fx-font-size: 14;" />

    <TextField fx:id="submissionField"
               layoutX="150.0" layoutY="345.0" prefWidth="500.0"
               promptText="Enter your answer or file path here..."
               style="-fx-background-radius: 5; -fx-border-radius: 5;"/>

    <!-- Submit button -->
    <Button fx:id="submitBtn"
            layoutX="660.0" layoutY="345.0" text="Submit Assignment"
            
            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" />

    <!-- Status message -->
    <Label fx:id="statusLabel"
           layoutX="150.0" layoutY="380.0"
           style="-fx-font-size: 13;" />

</AnchorPane>
