<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="assignment.management.StudentDashboardController">
    
    <BorderPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        
        <!-- Sidebar -->
        <left>
            <VBox alignment="TOP_CENTER" prefWidth="180" spacing="10" style="-fx-background-color: black; -fx-padding: 20;">
        
                <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 0 0 10 0;" text="Student Panel" />
                <Button fx:id="homeBtn" alignment="TOP_LEFT" onAction="#handleHome" prefHeight="25.0" prefWidth="118.0" styleClass="sidebar-button" text="Home" />
                <Button fx:id="assignmentsBtn" alignment="TOP_LEFT" onAction="#handleAssignments" prefHeight="25.0" prefWidth="117.0" styleClass="sidebar-button" text="Assignments" />
                <Button fx:id="profileBtn" alignment="TOP_LEFT" onAction="#handleProfile" prefHeight="25.0" prefWidth="116.0" styleClass="sidebar-button" text="Profile" />
                <Button fx:id="logoutBtn" alignment="TOP_LEFT" onAction="#handleLogout" prefHeight="25.0" prefWidth="117.0" styleClass="sidebar-button" text="Logout" />
            </VBox>
        </left>


        <!-- Main Content -->
        <center >
            <StackPane fx:id="mainContent" style="-fx-background-color: white;  -fx-padding: 15;">
                <Label fx:id="welcomeLabel" style="-fx-font-size: 20px; -fx-text-fill: black;" text="Welcome to Student Dashboard!" />
            </StackPane>
        </center>
        
    </BorderPane>
</AnchorPane>
