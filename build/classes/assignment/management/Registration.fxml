<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600" prefWidth="900" 
            style="-fx-background-color: #f8f9fa;" 
            xmlns:fx="http://javafx.com/fxml/1" 
            xmlns="http://javafx.com/javafx/20.0.1" 
            fx:controller="assignment.management.RegistrationController">
    
    <!-- Main Container with Split Layout -->
    <HBox AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" 
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        
        <!-- Left Side - Registration Form -->
        <VBox prefWidth="450" spacing="0" 
              style="-fx-background-color: white;" 
              alignment="CENTER">
            
            <!-- Form Container -->
            <VBox spacing="10" maxWidth="350" alignment="CENTER" 
                  style="-fx-padding: 40 50 40 50;">
                
                <!-- Header Section -->
                <VBox spacing="8" alignment="CENTER">
                    
                    <!-- Logo/Icon -->
                    <Circle radius="30" 
                            style="-fx-fill: linear-gradient(to bottom right, #667eea, #764ba2);">
                        <effect>
                            <DropShadow color="rgba(102, 126, 234, 0.3)" radius="10" offsetY="3"/>
                        </effect>
                    </Circle>
                    
                    <!-- Welcome Text -->
                    <Label text="Create Account" 
                           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2d3748;">
                        <font>
                            <Font name="System Bold" size="28.0" />
                        </font>
                    </Label>
                    
                    <Label text="Join us today and get started!" 
                           style="-fx-font-size: 14px; -fx-text-fill: #718096;">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    
                </VBox>
                
                <!-- Form Fields -->
                <VBox spacing="20" prefWidth="300">
                    
                    <!-- Full Name Field -->
                    <VBox spacing="6">
                        <Label text="Full Name" 
                               style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #4a5568;">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Label>
                        <TextField fx:id="userName" promptText="Enter your full name"
                                   style="-fx-background-color: #f7fafc; -fx-border-color: #e2e8f0; -fx-border-width: 2; -fx-border-radius: 8; -fx-background-radius: 8; s -fx-font-size: 14; -fx-padding: 5; -fx-text-fill: #2d3748;"
                                   prefHeight="45">
                            <effect>
                                <InnerShadow color="rgba(0,0,0,0.05)" radius="2"/>
                            </effect>
                        </TextField>
                    </VBox>
                    
                    <!-- Email Field -->
                    <VBox spacing="6">
                        <Label text="Email Address" 
                               style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #4a5568;">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Label>
                        <TextField fx:id="email" promptText="Enter your email address"
                                   style="-fx-background-color: #f7fafc; -fx-border-color: #e2e8f0; -fx-border-width: 2; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 5; -fx-font-size: 14; -fx-text-fill: #2d3748;"
                                   prefHeight="45">
                            <effect>
                                <InnerShadow color="rgba(0,0,0,0.05)" radius="2"/>
                            </effect>
                        </TextField>
                    </VBox>
                    
                    <!-- Password Field -->
                    <VBox spacing="6">
                        <Label text="Password" 
                               style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #4a5568;">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Label>
                        <PasswordField fx:id="password" promptText="Create a password"
                                       style="-fx-background-color: #f7fafc; -fx-border-color: #e2e8f0; -fx-border-width: 2; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 5; -fx-font-size: 14; -fx-text-fill: #2d3748;"
                                       prefHeight="45">
                            <effect>
                                <InnerShadow color="rgba(0,0,0,0.05)" radius="2"/>
                            </effect>
                        </PasswordField>
                    </VBox>
                    
                    <!-- Confirm Password Field -->
                    <VBox spacing="6">
                        <Label text="Confirm Password" 
                               style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #4a5568;">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Label>
                        <PasswordField fx:id="confirmPassword" promptText="Confirm your password"
                                       style="-fx-background-color: #f7fafc; -fx-border-color: #e2e8f0; -fx-border-width: 2; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 5; -fx-font-size: 14; -fx-text-fill: #2d3748;"
                                       prefHeight="45">
                            <effect>
                                <InnerShadow color="rgba(0,0,0,0.05)" radius="2"/>
                            </effect>
                        </PasswordField>
                    </VBox>
                    
                </VBox>
                
                <!-- Status Message -->
                <Label fx:id="statusLabel" textFill="#e53e3e" 
                       style="-fx-font-size: 13px; -fx-font-weight: 500;"
                       wrapText="true" alignment="CENTER" prefWidth="300"/>
                
                <!-- Register Button -->
                <Button fx:id="registerBtn" onAction="#handleRegister" 
                        text="CREATE ACCOUNT" prefWidth="300" prefHeight="50"
                        style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); -fx-text-fill: white; -fx-background-radius: 25; -fx-font-weight: bold; -fx-font-size: 15; -fx-cursor: hand;">
                    <effect>
                        <DropShadow color="rgba(102, 126, 234, 0.4)" radius="8" offsetY="4"/>
                    </effect>
                </Button>
                
                <!-- Login Link -->
                <HBox spacing="5" alignment="CENTER">
                    <Label text="Already have an account?" 
                           style="-fx-font-size: 13px; -fx-text-fill: #718096;"/>
                    <Button text="Sign In" 
                            style="-fx-background-color: transparent; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-underline: true; -fx-cursor: hand; -fx-border-width: 0; -fx-font-size: 13px;"
                            onAction="#goToLogin"/>
                </HBox>
                
            </VBox>
            
        </VBox>
        
        <!-- Right Side - Image Section -->
        <VBox prefWidth="450" 
              style="-fx-background-color: linear-gradient(135deg, #667eea 0%, #764ba2 100%);" 
              alignment="CENTER">
            
            <!-- Image Container -->
            <StackPane prefWidth="400" style="">
                <ImageView fitHeight="500" fitWidth="400" preserveRatio="true">
                    <image>
                        <Image url="@signup.png" />
                    </image>
                </ImageView>
            </StackPane>
            
        </VBox>
        
    </HBox>
    
</AnchorPane>



